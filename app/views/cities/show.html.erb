<% if @city.cover.present? %>
  <p>
    <%= image_tag @city.cover.horizontal.url %>
  </p>
<% end %>

<div class="P_Tour">

<p id="notice"><%= notice %></p>


<div class="M_Header">
  <div class="A_H1"><%= @city.name %></div>
  <div class="A_H4"><%= link_to 'Все города', cities_path%></div>
</div>

<div class="O_Tours">

  <% @city.tours.each do |tour| %>

    <div class="Please">

      <%= link_to tour do%>
        <div class="M_TourCard">

          <% if tour.cover.present? %>
            <div class="Q_Image">
              <%= image_tag tour.cover.card.url, class: "Q_Image"%>
            </div>
          <% end %>

          <div class="Save">
            <% if tour.favourites.where(guide_id: 1).any? %>
            <%= link_to tours_add_to_favourite_path(tour_id: tour.id), method: :post do %>
                <div class="Q_SaveOn"></div>
              <% end %>

            <% else %>

              <%= link_to tours_add_to_favourite_path(tour_id: tour.id), method: :post do %>
                <div class="Q_SaveOff"></div>
              <% end %>
            <% end %>
          </div>

          <div class="">
            <h2 class="A_H2"><%= tour.title %></h2>
          </div>

          <div class="">
            <h2 class="A_P1"><%= tour.description %></h2>
          </div>

        </div>
      </div>
  <% end %>
  <% end %>
  </div>

<%#= link_to 'Редактировать', edit_city_path(@city) %>

</div>

<%= render 'application/footer' %>
