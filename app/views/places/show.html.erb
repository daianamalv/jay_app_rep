<p id="notice"><%= notice %></p>

<% if @place.cover.present? %>
  <p>
    <%= image_tag @place.cover.horizontal.url %>
  </p>
<% end %>

<div class="P_Tour">

  <div class="Place">

  <div class="O_PlaceInfo">

    <div class="A_P1">
      <%= link_to @place.tour.title, tour_path(@place.tour) %>
    </div>

    <div class="A_H1">
      <%= @place.title %>
      <%= link_to edit_place_path(@place) do %>
      <div class="Q_Edit"></div>
      <% end %>
    </div>

    <%#= link_to 'Нравится', tours_add_to_favourite_path(tour_id: @tour.id), method: :post %>
    <%# end %>

    <div class="A_P1">
      <%= @place.description %>
    </div>

  </div>

    <div class="M_Photos">
      <% @place.place_images.each do |place_image| %>
        <% if place_image.image.present? %>
          <div class="Q_Image">
            <%= image_tag place_image.image.list.url, class: "Q_Image" %>
          </div>
        <% end %>
    <% end %>
    </div>
  </div>

</div>
<%= render 'application/footer' %>
